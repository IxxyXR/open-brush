#!/usr/bin/env bash

LOGFILE=$WORK_DIR/adblog.txt
PACKAGE=com.Icosa.OpenBrush

case $1 in
-s) ADBEXE=$(cygpath -u "$HOMEPATH\AppData\Roaming\SideQuest\platform-tools\adb.exe")
	echo "SideQuest ADB"
	;;
*) ADBEXE=$(cygpath -u "C:\Unity\2019.4.18f1\Editor\Data\PlaybackEngines\AndroidPlayer\SDK\platform-tools\adb.exe")
	echo "Unity ADB"
	;;
esac

($ADBEXE logcat -s Unity > $LOGFILE)&
sleep 1
#subl $(cygpath -w $LOGFILE)
baretail $(cygpath -w $LOGFILE)

$ADBEXE shell am force-stop $PACKAGE
sleep 1
$ADBEXE shell am start -n $PACKAGE/com.unity3d.player.UnityPlayerActivity

